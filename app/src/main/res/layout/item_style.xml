<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/item_tiao"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/item_today_image"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_title"
        android:textSize="18sp"
        android:text="java 发布 博客版本 20.1.0241"/>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/item_body"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
<TextView
    android:layout_width="wrap_content"
    android:id="@+id/item_anthor"
    android:text="\@88250"
    android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/item_anthor"
            android:text="XX分钟前" />

        <TextView
            android:id="@+id/item_commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="5" />

        <ImageView
            android:id="@+id/item_image_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/item_commentCount"
            android:src="@drawable/ic_comment_30" />
    </RelativeLayout>
</LinearLayout>